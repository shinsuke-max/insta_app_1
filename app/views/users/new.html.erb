<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :follow_notification, class:"checkbox inline" do %>
        <%= f.check_box :follow_notification %>
        <span>Send email when other users follow or unfollow you</span>
      <% end %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
      <div class="facebooklogin">
        <%= link_to "Sign up with Facebook", "/auth/facebook", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>