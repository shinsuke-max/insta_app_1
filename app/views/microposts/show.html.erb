<%= @micropost.content %>
<%= image_tag @micropost.picture.url if @micropost.picture?%>

<%= render 'comment_list', { micropost: @micropost } %>

<%= form_with model: [@micropost, Comment.new], class: "w-100" do |f| %>
　　<%= f.hidden_field :user_id, value: current_user.id %>
　　<%= f.hidden_field :micropost_id, value: @micropost.id %>
　　<%= f.text_field :comment, value: @comment.body, class: "form-control comment-input border-0", placeholder: "Comment", autocomplete: :off %>
<% end %>
